<layout>

    <!-- Date -->
    <component type="datetime" format="%d/%m/%Y %H:%M:%S" size="18" x="20" y="20"/>

    <!-- ==================== HEART RATE - Haut droite ==================== -->
    <composite x="1780" y="20" name="heart_rate">
        <component type="icon" x="0" y="0" size="32" file="heartbeat.png"/>
        <component type="metric" x="40" y="5" metric="hr" dp="0" size="28" align="left"/>
        <component type="metric_unit" metric="hr" x="90" y="5" size="18" align="left">{:~P}</component>
    </composite>

    <component type="lap_times_table"
               x="25"
               y="60"
               width="280"
               max_laps="8"
               size="18"
               show_best="true"
               show_max_speed="true"/>


    <component type="lap_chronometer"
               x="800"
               y="50"
               width="280"
               height="100"
               size="20"
               show_lap_number="true"/>


    <!-- ==================== VITESSE + RPM - Coin bas droite ==================== -->
    <composite x="1650" y="600" name="speed_rpm_block">
        <!-- ==================== TEMPÉRATURES (côte à côté) ==================== -->
        <composite x="0" y="120" name="temps">
            <!-- Température Eau -->
            <component type="icon" x="0" y="0" size="36" file="thermometer-1.png"/>
            <component type="metric" x="30" y="5" metric="temp" dp="0" size="22" align="left"/>
            <component type="text" x="65" y="5" size="16" align="left">°C</component>

            <!-- Température Échappement -->
            <component type="icon" x="100" y="0" size="36" file="exhaust.png"/>
            <component type="metric" x="140" y="5" metric="exhaust_temp" dp="0" size="22" align="left"/>
            <component type="text" x="180" y="5" size="16" align="left">°C</component>
        </composite>

        <!-- VITESSE - Tachymètre OK, chiffre réduit -->
        <composite x="0" y="180" name="speed_gauge">
            <component type="msi" metric="speed" textsize="16" needle="1" units="kph"
                       size="200" end="120" yellow="100" green="80"/>
            <component type="metric" metric="calculated_gear" x="100" y="45" size="30" align="centre" dp="0"/>
            <component type="metric" metric="speed" units="kph" dp="0" size="40"
                       x="100" y="140" align="centre"/>
            <component type="metric_unit" metric="speed" units="kph" size="18"
                       x="120" y="178" align="centre">{:~P}
            </component>
        </composite>

        <component type="rpm_bar"
                   x="15"
                   y="400"
                   width="400"
                   height="50"
                   segments="17"
                   segment_width="8"
                   segment_spacing="2"
                   max_rpm="15000"
                   size="20"
                   show_label="true"/>
    </composite>


    <!-- Widget G-Force circulaire -->
    <component type="gforce_circle"
               x="30"
               y="680"
               size="180"
               max_g="3"
               bg_colour="0,0,0,220"
               grid_colour="80,80,80,150"
               point_colour="255,50,50,255"
               line_colour="255,50,50,150"/>

    <!-- ==================== CARTE - Point mobile sans traces ==================== -->
    <translate x="20" y="850">
        <component type="moving_map" size="200" rotate="false" corner_radius="20"/>
        <component type="metric_unit" metric="odo" units="km" size="12"
                   x="250" y="170">{:~P}
        </component>
        <component type="metric" metric="odo" units="km" x="210" y="180" size="20"/>
    </translate>
</layout>